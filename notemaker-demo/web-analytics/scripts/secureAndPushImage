#/bin/bash

imageID=$(docker images unoteit/matomo | grep unoteit | awk '{print $3}')
imageName=$(docker images | grep $imageID | grep -v unoteit)

echo "Using image $imageName for matomo application"
echo "Let's make sure it's secure first" 
scanImage unoteit/matomo || { echo 'security scan failed, exiting without pusing image' ; exit 1; }
 
docker push unoteit/matomo

