apiVersion: v1
kind: Service
metadata:
  name: notemaker 
  namespace: notemaker
spec:
  selector:
    app: notemaker
    tier: web 
  ports:
    - port: 80
      targetPort: 3000
  type: LoadBalancer

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: notemaker 
  namespace: notemaker
  labels:
    app: notemaker 
    tier: web 
spec:
  replicas: 2
  selector:
    matchLabels:
      app: notemaker 
      tier: web 
  template:
    metadata:
      labels:
        app: notemaker 
        tier: web 
    spec:
      containers:
        - name: notemaker 
          image: notemaker/notemaker:1.0
          securityContext:
            allowPrivilegeEscalation: false
          ports:
            - containerPort: 3000
          env:
            - name: MONGO_URL
              value: mongodb://mongodb:27017/dev 
          imagePullPolicy: Always

